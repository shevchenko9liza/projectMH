<Window x:Class="Project.Views.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Project.ViewModels"
        Title="Dashboard" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="{StaticResource DarkBackground}"
        WindowState="Maximized">
    <Window.DataContext>
        <viewmodels:MainPageViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="80" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Dashboard" 
                           Foreground="{StaticResource TextColor}" FontSize="24" FontWeight="SemiBold"
                           VerticalAlignment="Center" FontFamily="Segoe UI"/>
                <Button Grid.Column="1" Content="Logout" 
                        Style="{StaticResource DangerButton}"
                        Command="{Binding LogoutCommand}"
                        TabIndex="1"
                        ToolTip="Sign out of the system"
                        AutomationProperties.Name="Logout button"
                        AutomationProperties.HelpText="Click to sign out of the system"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="0,20,0,40">
                <TextBlock Text="{Binding WelcomeMessage}" 
                           Foreground="{StaticResource TextColor}" FontSize="36" FontWeight="Light"
                           HorizontalAlignment="Center" FontFamily="Segoe UI"/>
            </StackPanel>
            <Grid Grid.Row="1">
                <Border Style="{StaticResource DashboardCard}" MaxWidth="600" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Dashboard Ready" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" 
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window> 