<Window x:Class="Project.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Project.ViewModels"
        Title="Sign In" Height="520" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="{StaticResource DarkBackground}" WindowStyle="None">
    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <Border Background="{StaticResource CardBackground}" CornerRadius="16" Padding="48,40" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="320" Height="440">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Welcome Back" 
                           Style="{StaticResource PageTitle}"
                           Margin="0,0,0,32"/>
                <StackPanel Margin="0,12">
                    <TextBlock Text="Username" 
                               Style="{StaticResource Label}"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,6,0,16"
                             TabIndex="1"
                             ToolTip="Enter your username"
                             AutomationProperties.Name="Username"
                             AutomationProperties.HelpText="Field for entering username"/>
                </StackPanel>
                <StackPanel Margin="0,12">
                    <TextBlock Text="Password" 
                               Style="{StaticResource Label}"/>
                    <PasswordBox Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,6,0,24"
                                 TabIndex="2"
                                 ToolTip="Enter your password"
                                 AutomationProperties.Name="Password"
                                 AutomationProperties.HelpText="Field for entering password"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>
                <Button Content="Sign In" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Margin="0,0,0,24"
                        TabIndex="3"
                        IsDefault="True"
                        ToolTip="Click to sign in"
                        AutomationProperties.Name="Sign in button"
                        AutomationProperties.HelpText="Click to sign in to the system"/>
                <TextBlock Text="{Binding LoginMessage}" 
                           Foreground="#EF4444"
                           FontSize="14"
                           FontFamily="Segoe UI"
                           FontWeight="Medium"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MinHeight="20"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 