<Window x:Class="Project.Views.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Project.ViewModels"
        xmlns:converters="clr-namespace:Project.Converters"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Dashboard" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="{StaticResource DarkBackground}"
        WindowState="Maximized">
    <Window.DataContext>
        <viewmodels:MainPageViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" Height="80" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Dashboard - Serial Port Communication" 
                           Foreground="{StaticResource TextColor}" FontSize="24" FontWeight="SemiBold"
                           VerticalAlignment="Center" FontFamily="Segoe UI"/>
                <Button Grid.Column="1" 
                        Background="{StaticResource SecondaryBackground}"
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1"
                        Padding="12,6" 
                        Margin="0,0,15,0"
                        Command="{Binding DisconnectCommand}"
                        IsEnabled="{Binding IsConnected}"
                        ToolTip="Click to disconnect"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="{StaticResource TextColor}" 
                               FontSize="14" FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </Button>
                <Button Grid.Column="2" Content="Logout" 
                        Style="{StaticResource DangerButton}"
                        Command="{Binding LogoutCommand}"
                        TabIndex="1"
                        ToolTip="Sign out of the system"
                        AutomationProperties.Name="Logout button"
                        AutomationProperties.HelpText="Click to sign out of the system"/>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20">
            <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding WelcomeMessage}" 
                           Foreground="{StaticResource TextColor}" FontSize="28" FontWeight="Light"
                           HorizontalAlignment="Center" FontFamily="Segoe UI"
                           Margin="0,20,0,20"/>
                <Border Grid.Row="1" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="COM Port Connection" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Port:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding AvailablePorts}"
                                      SelectedItem="{Binding SelectedPort}"
                                      Margin="0,0,15,0" Height="35"
                                      FontSize="14"
                                      FontFamily="Segoe UI"
                                      Background="White"
                                      Foreground="Black"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      Padding="8,6"
                                      ToolTip="Select COM port">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   FontFamily="Segoe UI" 
                                                   FontSize="13"
                                                   Padding="5,3"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Baud Rate:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="0" Grid.Column="3" 
                                      ItemsSource="{Binding AvailableBaudRates}"
                                      SelectedItem="{Binding BaudRate}"
                                      Margin="0,0,15,0" Height="35"
                                      FontSize="14"
                                      FontFamily="Segoe UI"
                                      Background="White"
                                      Foreground="Black"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      Padding="8,6"
                                      ToolTip="Select baud rate">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   FontFamily="Segoe UI" 
                                                   FontSize="13"
                                                   Padding="5,3"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" 
                                        Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Button Content="Refresh Ports" 
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding RefreshPortsCommand}"
                                        Margin="0,0,10,0" MinWidth="100"/>
                                <Button Content="Connect" 
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding ConnectCommand}"
                                        IsEnabled="{Binding CanConnect}"
                                        Margin="0,0,10,0" MinWidth="100"/>
                                <Button Content="Disconnect" 
                                        Style="{StaticResource DangerButton}"
                                        Command="{Binding DisconnectCommand}"
                                        IsEnabled="{Binding CanDisconnect}"
                                        MinWidth="100"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Device Commands" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Command:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding AvailableCommands}"
                                      SelectedItem="{Binding CommandText}"
                                      IsEditable="True"
                                      Margin="0,0,15,0"
                                      Height="35"
                                      FontSize="14"
                                      FontFamily="Consolas"
                                      Background="White"
                                      Foreground="Black"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      ToolTip="Select or enter command to send to device">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="12"
                                                   Padding="5,2"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="Send Command" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding SendCommandCommand}"
                                    MinWidth="120"/>
                        </Grid>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Wavelength:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding Wavelength, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Margin="0,0,10,0"
                                     ToolTip="Enter wavelength (190-1100 nm)"
                                     MaxLength="4"/>
                            <TextBlock Grid.Column="2" Text="nm" 
                                       Foreground="{StaticResource SubtleTextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <Button Grid.Column="3" Content="Set Wavelength" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding SetWavelengthCommand}"
                                    MinWidth="120"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Get Energy" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding GetEnergyCommand}"
                                    Margin="0,0,10,0" MinWidth="100"/>
                            <Button Content="Reset Device" 
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding ResetDeviceCommand}"
                                    MinWidth="100"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Multi-Wavelength Measurements" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Wavelengths:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding WavelengthsInput, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Margin="0,0,15,0"
                                     ToolTip="Enter wavelengths (190-1100 nm) separated by commas, semicolons, or spaces"
                                     Height="35"
                                     MaxLength="200"/>
                            <Button Grid.Column="2" Content="Measure All" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding MeasureMultipleCommand}"
                                    MinWidth="120"/>
                        </Grid>
                        <Grid Margin="0,0,0,15" Visibility="{Binding IsMeasuring, Converter={x:Static converters:BooleanToVisibilityConverter.Instance}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Progress:" 
                                       Foreground="{StaticResource TextColor}" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ProgressBar Grid.Column="1" 
                                         Value="{Binding MeasurementProgress}" 
                                         Maximum="100"
                                         Height="25" 
                                         Margin="0,0,15,0"
                                         Background="{StaticResource SecondaryBackground}"
                                         Foreground="{StaticResource AccentColor}"/>
                            <Button Grid.Column="2" Content="Cancel" 
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding CancelMeasurementCommand}"
                                    MinWidth="80"/>
                        </Grid>
                        <Border Background="{StaticResource SecondaryBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,10">
                            <TextBlock Text="{Binding MeasurementStatus}" 
                                       Foreground="{StaticResource TextColor}" 
                                       FontSize="14" 
                                       FontFamily="Segoe UI"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Measurement Results:" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,10"/>
                        <DataGrid ItemsSource="{Binding MeasurementResults}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="None"
                                  AlternatingRowBackground="{StaticResource SecondaryBackground}"
                                  Background="{StaticResource DarkBackground}"
                                  Foreground="{StaticResource TextColor}"
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  MinHeight="200"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding Id}" 
                                                    Width="40"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Wavelength" 
                                                    Binding="{Binding WavelengthDisplay}" 
                                                    Width="100"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Energy" 
                                                    Binding="{Binding EnergyDisplay}" 
                                                    Width="100"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Status" 
                                                    Binding="{Binding Status}" 
                                                    Width="80"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Time" 
                                                    Binding="{Binding TimeDisplay}" 
                                                    Width="80"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Notes" 
                                                    Binding="{Binding Notes}" 
                                                    Width="*"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Energy vs Wavelength Chart" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <lvc:CartesianChart Series="{Binding EnergyChartSeries}"
                                           Height="300"
                                           Margin="0,0,0,10"
                                           Background="{StaticResource CardBackground}"/>
                        <TextBlock Text="Real-time chart updates as measurements are taken"
                                   Foreground="{StaticResource SubtleTextColor}"
                                   FontSize="12"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Thread Management Controls" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <Border Background="{StaticResource SecondaryBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,0,0,15">
                            <TextBlock Text="{Binding AutoAddingStatus}" 
                                       Foreground="{StaticResource TextColor}" 
                                       FontSize="14" 
                                       FontFamily="Segoe UI"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Stop Auto-Adding" 
                                    Style="{StaticResource DangerButton}"
                                    Command="{Binding StopThreadCommand}"
                                    IsEnabled="{Binding IsAutoAdding}"
                                    Margin="0,0,15,0"
                                    MinWidth="120"/>
                            <Button Content="Resume Auto-Adding" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding ResumeThreadCommand}"
                                    IsEnabled="{Binding Path=IsAutoAdding, Converter={x:Static converters:BooleanInverterConverter.Instance}}"
                                    Margin="0,0,15,0"
                                    MinWidth="120"/>
                            <TextBox Text="{Binding ManualEntryText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Width="200"
                                     Margin="0,0,10,0"
                                     IsEnabled="{Binding Path=IsAutoAdding, Converter={x:Static converters:BooleanInverterConverter.Instance}}"
                                     ToolTip="Enter custom message for manual data entry (max 100 characters)"
                                     MaxLength="100"/>
                            <Button Content="Add Manually" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding ManualAddCommand}"
                                    MinWidth="120"/>
                        </StackPanel>
            </StackPanel>
                </Border>
                <Border Grid.Row="6" Style="{StaticResource DashboardCard}" 
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Latest Data:" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,10"/>
                        <Border Background="{StaticResource SecondaryBackground}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10">
                            <TextBlock Text="{Binding LatestData}" 
                                       Foreground="{StaticResource TextColor}" 
                                       FontSize="16" 
                                       FontFamily="Segoe UI"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </Border>
                <Border Grid.Row="7" Style="{StaticResource DashboardCard}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Operation History (Auto-generation, Manual entries, and COM operations):" 
                                   Foreground="{StaticResource TextColor}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI"
                                   Margin="0,0,0,15"/>
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding DataItems}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="None"
                                  AlternatingRowBackground="{StaticResource SecondaryBackground}"
                                  Background="{StaticResource DarkBackground}"
                                  Foreground="{StaticResource TextColor}"
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  MinHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding Id}" 
                                                    Width="50"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Operation" 
                                                    Binding="{Binding OperationType}" 
                                                    Width="120"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Content" 
                                                    Binding="{Binding Content}" 
                                                    Width="*"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Time" 
                                                    Binding="{Binding FormattedTime}" 
                                                    Width="100"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Wavelength" 
                                                    Binding="{Binding WavelengthDisplay}" 
                                                    Width="100"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                                <DataGridTextColumn Header="Energy" 
                                                    Binding="{Binding EnergyDisplay}" 
                                                    Width="100"
                                                    ElementStyle="{StaticResource DataGridCellStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window> 