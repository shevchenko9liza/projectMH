{
  "ApplicationSettings": {
    "Theme": "Dark",
    "Language": "ru-RU",
    "WindowStartupLocation": "CenterScreen",
    "WindowState": "Maximized",
    "AutoSaveSettings": true
  },
  "ComPortConfiguration": {
    "DefaultBaudRate": 9600,
    "ConnectionTimeout": 5000,
    "ReadTimeout": 5000,
    "WriteTimeout": 5000,
    "DefaultDataBits": 8,
    "DefaultStopBits": 1,
    "DefaultParity": "None",
    "AutoConnectOnStartup": false,
    "DefaultPort": "COM1"
  },
  "DataManagement": {
    "MaxHistoryRecords": 50,
    "EnableAutoDataGeneration": true,
    "DataGenerationInterval": 1000,
    "EnableDataLogging": true,
    "LogRotationDays": 30
  },
  "MeasurementSettings": {
    "WavelengthRange": {
      "MinWavelength": 190,
      "MaxWavelength": 1100
    },
    "StabilizationDelay": 500,
    "MaxConcurrentMeasurements": 1,
    "EnableProgressTracking": true,
    "AutoClearPreviousResults": true
  },
  "ChartSettings": {
    "EnableRealTimeUpdates": true,
    "MaxDataPoints": 1000,
    "DefaultHeight": 300,
    "EnableAnimations": true,
    "PointSize": 8,
    "LineThickness": 3,
    "EnableSmoothing": true,
    "SmoothnessFactor": 0.3
  },
  "LoggingSettings": {
    "LogDirectory": "Logs",
    "MaxLogFileSize": "10MB",
    "MaxMemoryEntries": 1000,
    "EnableDebugLogging": true,
    "LogLevels": ["Debug", "Info", "Warning", "Error", "Critical"],
    "EnableFileRotation": true,
    "LogFormat": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level}] [{Source}] {Message}"
  },
  "SecuritySettings": {
    "EnableAuthentication": true,
    "SessionTimeout": 3600,
    "MaxLoginAttempts": 3,
    "PasswordMinLength": 8,
    "EnablePasswordComplexity": false
  },
  "Performance": {
    "UIUpdateInterval": 50,
    "BackgroundTaskDelay": 100,
    "MaxThreads": 4,
    "EnablePerformanceMonitoring": false
  },
  "Advanced": {
    "EnableDeveloperMode": false,
    "EnableExperimentalFeatures": false,
    "DebugMode": false,
    "EnableTelemetry": false
  }
} 